
<div class="container mt-3 mb-3 justify-text-center">
  <div class="row justify-content-center text-center">

    <div class="card bg-light mb-3" style="padding-left:0;padding-right:0;">
      <div class="card-header">
        <h1><%= @line.name %></h1>
      </div>
      <div class="card-body">

        <table class="table table-bordered table-condensed table-responsive" style="display:table">
          <thead>
            <th>Estacion</th> 
            <th>Mostrar<br/>DFT</th>
            <th>Mostrar<br/>QG</th>
            <th>Mostrar<br/>Ambos</th>
          </thead>  
          <tbody>
            <% @line.stations.sort_by(&:name).each do |station| %>  
              <tr>
                <td><%= station.name %></td>  
                <td>
                  <% if station.has_dft? %>
                    <a href="/abb/project?l=<%= @line.line_identifier%>&s=<%= station.name %>&c=dft" class="btn btn-primary btn-block">DFT</a> 
                  <% end %>
                </td>
                <td>
                  <% if station.has_qg? %>
                    <a href="/abb/project?l=<%= @line.line_identifier%>&s=<%= station.name %>&c=qg" class="btn btn-info btn-block">QG</a> 
                  <% end %>
                </td>
                <td>
                  <% if station.has_dft? and station.has_qg? %>
                    <a href="/abb/project?l=<%= @line.line_identifier%>&s=<%= station.name %>&c=dft,qg" class="btn btn-warning btn-block">Ambos</a> 
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>

  </div>
</div>