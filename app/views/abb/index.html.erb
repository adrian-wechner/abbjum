<div class="container mt-3 mb-3 justify-content-center">
  <div class="row justify-content-center text-center">
    <h1>Selecciona Linea</h1>
    <% @lines.each do |line| %>
      <div class="card bg-light" style="width: 18rem;">
        <!-- <img class="card-img-top" src="..." alt="<%= line.name %> LOGO"> -->
        <%= image_tag(line.file.variant(resize_to_fill: [300, 200]), style: "width:100%;", class: "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title"><%= line.name %></h5>
          <a href="/abb/select?l=<%= line.line_identifier %>" class="btn btn-primary">Iniciar</a>
        </div>
      </div>
    <% end %>
  </div>
</div>

