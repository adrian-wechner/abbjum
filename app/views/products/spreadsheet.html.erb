<%= render partial: "layouts/callouts" %>

<div class="container mt-3 mb-3">

  <h2>Upload .CSV de productos</h2>

    <div class="" id="product-form">
      <%= form_with(url: update_products_xls_products_path, method: "patch", html: { multipart: true }) do |form| %>

        <div class="form-group">
          <%= form.label :line_id, "Linea", style: "display: block" %>
          <%= form.select :line_id, Line.all.map{|l|[l.name, l.id]}, {}, { class: "form-control" } %>
        </div>

        <div class="mb-12 mt-3">
          <label for="formFile" class="form-label">Selecciona .CSV con separacion de comas. Que contiene la info de productos usando las columnas: <br/>catalogo, seq, activo, metric1, metric2, metric3, metric4, metric5, metric6, metric7, metric8<br/>
          Archivos tienen que estar estructurado correctamente.</label>
          <input accept=".csv" class="form-control" type="file" id="formFile" name="productfile">
        </div>

        <div class="form-group mt-3">
          <%= form.submit "Actualizar Productos", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>

</div>