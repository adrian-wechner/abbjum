<%= form_with(model: checklist) do |form| %>
  <% if checklist.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(checklist.errors.count, "error") %> prohibited this checklist from being saved:</h2>

      <ul>
        <% checklist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :line_id, style: "display: block" %>
    <%= form.select :line_id, Line.all.map{|l|[l.name, l.id]}, {}, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control"  %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit "#{checklist.new_record? ? "Crear Nueva" : "Actualizar"} Checklist", class: "btn btn-info" %>
  </div>
<% end %>
